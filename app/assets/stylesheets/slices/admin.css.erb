/* Calendar View */
.calendar-modal {
  position: absolute;
  top: 0; right: 0; bottom: 0; left: 0;
  z-index: 5000;
}

.calendar-modal .background {
  position: absolute;
  top: 0; right: 0; bottom: 0; left: 0;
  background: rgba(0, 0, 0, 0.15);
}

.calendar {
  background: white;
  border-radius: 2px;
  box-shadow: 0px 1px 8px rgba(0, 0, 0, 0.5);
  line-height: 1;
  padding: 7px;
  position: absolute;
  margin: 10px 0 0 0;

  -webkit-user-select: none;
  -moz-user-select: none;
  -o-user-select: none;
  user-select: none;

  -webkit-transform-origin: 50% -7px;
}
.calendar:after {
  bottom: 100%; left: 50%;
  border: 10px solid transparent;
  border-bottom-color: white;
  content: ' ';
  width: 0; height: 0;
  position: absolute;
  pointer-events: none;
  border-width: 7px;
  margin-left: -7px;
}

.calendar table {
  border-collapse: collapse;
}
.calendar th,
.calendar td {
  text-align: center;
  vertical-align: middle;
  width: 2em; height: 2em;
}
.calendar th {
  color: hsl(207, 97%, 80%);
  pointer-events: none;
}
.calendar [data-action$="-month"] {
  cursor: pointer;
  font-weight: bold;
  color: hsl(207, 97%, 80%);
}

.calendar [data-action$="-month"]:hover {
  color: hsl(207, 97%, 50%);
}
.calendar [data-action$="-month"]:active {
  color: hsl(207, 97%, 20%);
}

.calendar time {
  box-sizing: border-box;
  cursor: pointer;
  display: block;
  padding: 6px 0;
  vertical-align: middle;
  width: 2em; height: 2em;
}
.calendar time:hover {
  background: hsl(0, 0%, 90%);
  color: hsl(0, 0%, 30%);
}

.calendar .prev-month,
.calendar .next-month {
  color: hsl(0, 0%, 80%);
}
.calendar .today {
  border: 1px solid hsl(0, 0%, 80%);
}
.calendar .highlight,
.calendar .highlight:hover {
  background: hsl(207, 97%, 80%);
  color: white;
  font-weight: bold;
  text-shadow: 0px -1px rgba(0, 0, 0, 0.5);
}
.calendar .highlight.today {
  border-color: hsl(207, 50%, 50%)
}

.calendar-modal[data-state="preparing"] .background {
  -webkit-transition: none;
  opacity: 0;
}
.calendar-modal[data-state="preparing"] .calendar {
  -webkit-transition: none;
  -webkit-transform: scale(0);
}

.calendar-modal[data-state="showing"] .background {
  -webkit-transition: opacity 0.25s;
  opacity: 1;
}
.calendar-modal[data-state="showing"] .calendar {
  -webkit-transition: -webkit-transform 0.25s;
  -webkit-transform: scale(1);
}

.calendar-modal[data-state="hiding"] .background {
  -webkit-transition: opacity 0.25s;
  opacity: 0;
}
.calendar-modal[data-state="hiding"] .calendar {
  -webkit-transition: -webkit-transform 0.25s;
  -webkit-transform: scale(0);
}

