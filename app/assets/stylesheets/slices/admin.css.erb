/*
Token Field
*/

.token-field {
  position: relative;
}
.token-field input {}
.token-field .tokens {
  padding: 1px 7px 3px 2px;
  position: absolute;
  top: 0; left: 0;
  overflow: hidden;
}
.token-field .token {
  background: hsl(133, 53%, 79%);
  border-radius: 1px;
  border: 1px solid rgba(0, 0, 0, 0.25);
  color: rgba(0, 0, 0, 0.618);
  display: block;
  float: left;
  font-weight: bold;
  margin: 2px 1px 0;
  padding: 0.25em 1.75em 0.25em 0.5em;
  position: relative;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  cursor: default;
}
.token-field .token.focus {
  background: hsl(133, 30%, 60%);
}
.token-field .token .del {
  background-clip: border;
  background: rgba(0, 0, 0, 0.25);
  border-radius: 7px;
  box-sizing: border-box;
  color: hsl(133, 53%, 79%);
  cursor: pointer;
  font-size: 10px;
  font-weight: normal;
  line-height: 1;
  padding: 0px 0 0 3px;
  position: absolute;
  top: 4px; right: 4px;
  width: 12px; height: 12px;
  box-shadow:
    inset 0px 1px rgba(0, 0, 0, 0.15),
    0px 1px rgba(255, 255, 255, 0.5);
  text-shadow:
    0px 1px 1px rgba(0, 0, 0, 0.3);
}
.token-field .token .del:hover {
  background: rgba(0, 0, 0, 0.5);
}
.token-field .token .del:active {
  background: rgba(0, 0, 0, 0.75);
}
.token-field .options {
  display: block;
  padding: 0.5em 0 0 0;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
.token-field .option {
  color: hsl(133, 53%, 40%);
  cursor: pointer;
}
.token-field .option:hover {
  text-decoration: none;
}
.token-field .option.used {
  color: hsl(133, 53%, 79%);
}
#page-meta .token-field .option.used {
  color: hsl(0, 0%, 75%);
}
