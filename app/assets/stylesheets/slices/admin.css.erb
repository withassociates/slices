/* Master button styles*/
input[type="submit"],
button[type="submit"],
input[type="reset"],
.add,
.button,
.standard,
button {
  padding: 6px 10px;
  border-radius: 2px;
  border: solid 1px rgb(153, 153, 153);
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(rgb(255, 255, 255)), to(rgb(221, 221, 221)));
  color: #333;
  text-decoration: none;
  cursor: pointer;
  display: inline-block;
  text-align: center;
  text-shadow: 0px 1px 1px rgba(255,255,255,1);
  line-height: 1;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  -o-user-select: none;
  user-select: none;
}

button[type="submit"]:active,
input[type="submit"]:active,
input[type="reset"]:active,
.add:active,
.button:active,
.standard:active,
button:active {
  box-shadow:
  inset 0px 0px 16px rgba(0,0,0,0.2),
  inset 0px 1px 4px rgba(0,0,0,0.6);
  border-color: #888;
  border-top-color: #666;
  color: rgba(0,0,0,0.65);
}

/*
Submit Button
*/

button[type="submit"],
input[type="submit"],
.button.submit {
  background-color: hsl(107, 40%, 46%);
  background: -webkit-linear-gradient(
    hsl(106, 42%, 57%) 17%,
    hsl(107, 40%, 46%) 80%
  );
  border: 1px solid hsl(107, 64%, 32%);
  color: white;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4);
  font-weight: bold;
}

button[type="submit"]:active,
input[type="submit"]:active {
  border: 1px solid hsl(107, 64%, 26%);
  box-shadow:
    inset 0px 0px 16px rgba(0,0,0,0.2),
    inset 0px 1px 4px rgba(0,0,0,0.2);
  color: white;
}

button[type="submit"]:disabled,
input[type="submit"]:disabled {
  background: hsl(106, 22%, 57%);
  background: -webkit-linear-gradient(
    hsl(106, 22%, 57%) 17%,
    hsl(107, 20%, 46%) 80%
  );
  border: 1px solid hsl(107, 30%, 32%);
  cursor: default;
  opacity: 0.5;
}

/*
Search
*/

